{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "netlify": {
      "type": "local",
      "command": ["npx", "-y", "@netlify/mcp"]
    },
    "sanity": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.sanity.io",
        "--transport",
        "http-only"
      ]
    },
    "astro-docs": {
      "type": "remote",
      "url": "https://mcp.docs.astro.build/mcp",
      "enabled": true
    }
  }
}
